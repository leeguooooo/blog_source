@import "_common/_core/normalize";
@import "_mixins/base";
//////////
////// base ///

$title-color    = #2e3e4a;
$text-color     = #2e3e4a;
$intro-color    = #919191;
$title-color-l  = #efefef;

$aside-bg-color = #333;
$bg-color       = #e7e4e4;

$main-color-red     = #ff561b;
$main-color-yellow  = #fac200;
$main-color-green   = #57cf27;
$main-color-blue    = #2395f1;


$border-max-width = 1170px;
$box-shadow-big = 0 2px 31px 0 rgba(0,0,0,.08);

h1,
h2,
h3,
h4,
h5,
h6,
p,
ul {
    margin: 0;
}

html, body, .page {
    height: 100%;
}
body {
  background-color: #fff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', SimSun, sans-serif;
}

//////////
////// common ///

.nav-icon {
    cursor: pointer;
    &:hover {
        .nav-icon-line {
            width: 32px * 1.1;
        }
    }
}
.navpage-show .nav-icon-line {
  width: 35px;
}

.nav-icon-line {
    width: 32px;
    height: 3px;
    border-radius: 1px;
    opacity: 1;
    background-color: $main-color-red;
    transition: all .4s;
}

.x .nav-icon-line.top {
    transform: rotate(45deg) translate(7px, 5px);
}

.x .nav-icon-line.bottom {
    transform: rotate(-45deg) translate(7px, -6px);
}

.x .nav-icon-line.middle {
    opacity: 0;
}
.header-logo-word {
  fill: #efefef;
  transition: all .4s;
}
.x+.header-main .header-logo-word {
  .y {
    fill: #ff561b;
  }
  .m {
    fill: #fac200;
  }
  .f {
    fill: #57cf27;
  }
  .e {
    fill: #2395f1;
  }
}

.nav-icon-line:not(:last-child) {
    margin: 0 0 6px 0;
}

.fullname-logo  {
    font-family: 'ProximaNovaBold', Helvetica, Arial;
    font-size: 44px;
    line-height: 24px;
    margin-bottom: 30px;
    text-align: center;
    +mobile() {
        margin-bottom: 12px;
        font-size: 24px;
    }
    em {
      font-style: normal;
      color: #ff561b;
      font-size: 1.2em;
    }
}
.fullname-desc {
  color: #000;
  font-weight: normal;
  font-size: 18px;
  text-align: center;
  text-shadow: #fff 0px 1px 4px;
  +tablet() {
    font-size: 14px;
  }
  +mobile() {
    font-size: 13px;
  }
}

//////////
////// loading ///
.loading-page {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: $aside-bg-color;
    z-index: 41;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transform: translateX(100%);
    transition: opacity 1s ,transform 0s 1s;
}
.loading.default {
    .loading-page {
        opacity: 1;
        transform: translateX(0);
    }
}

.loading-icon {
    position: relative;
    width: 310px;
    height: 178px;
    +mobile() {
        width: 155px;
        height: 89px;
    }
}
.loading-progressbar {
    background-color: $main-color-red;
    transition: width .2s;
    width: 0;
    height: 100%;
}
.loading-logo {
    position: absolute;
    top: -5px;
    left: -5px;
    width: calc(100% + 10px);
    height: calc(100% + 10px);
    svg {
        width: 100%;
        height: 100%;
        use {
            fill: $aside-bg-color;
        }
    }
}
.loading-text {
    color: rgba(255, 255, 255, .3);
    text-align: right;
    font-size: 14px;
    margin: 0 10px 0 0;
    +mobile() {
        font-size: 10px;
    }
}

//////////
////// aside ///
.navpage-show .aside {
  background: #fff;
}
.aside {
    display: block;
    background: $aside-bg-color;
    width: 60px;
    height: 60px;
    bottom: 19px;
    right: 50px;
    position: fixed;
    z-index: 31;
    border-radius: 50%;
    transform: translateX(0);
    box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12);
    transition: all .4s;
    &:hover, &:active {
      box-shadow: 0 6px 12px rgba(0,0,0,0.2), 0 4px 15px rgba(0,0,0,0.2);
    }
    +tablet() {
      bottom: 15px;
      right: 15px;
    }
    +mobile() {
      bottom: 15px;
      right: 15px;
    }
    .nav-icon {
        padding: 20px 16px;
        position: absolute;
        top: 0;
        left: 50%;
        transform: translate(-50%, 0);
    }
}

.default .aside {
    transform: translateX(100%);
    +tablet() {
        display: none;
    }
    +mobile() {
        display: none;
    }
}

//////////
////// page ///

.page {
    position: relative;
    +tablet() {
        margin: 0;
        transition: margin .4s;
    }
    +mobile() {
        margin: 0;
        transition: margin .4s;
    }
    &.navpage-show {
        // overflow: hidden;
    }
}

.page a {
    text-decoration: none;
    transition: color .4s;
    &:hover {
        color: $main-color-red;
    }
}

.page ul {
    list-style: none;
    padding-left: 0;
}

//////////
////// header ///

.navpage-show .header {
  opacity: 0;
}
.header {
    opacity: 1;
    position: fixed;
    left: 0;
    right: 0;
    z-index: 11;
    margin: auto;
    margin-top: 20px;
    max-width: $border-max-width;
    box-shadow: $box-shadow-big;
    box-sizing: border-box;
    border-radius: 4px;
    width: 100%;
    height: 66px;
    background-color: rgba(0,0,0,.85);
    transition: all .3s;
    +tablet() {
        height: 64px;
        position: fixed;
        background-color: $aside-bg-color;
        background-image: none;
    }
    +mobile() {
        height: 64px;
        position: fixed;
        background-color: $aside-bg-color;
        background-image: none;
    }
}
.header-top {
  margin-top: 20px;
  max-width: 1170px;
  border-radius: 4px;
  +tablet() {
    margin-top: 0;
    border-radius: 0;
  }
  +mobile() {
    margin-top: 0;
    border-radius: 0;
  }
}
.header-not-top {
  margin-top: 0;
  max-width: 100%;
  border-radius: 0;
}

.header-inner {
    opacity: 1;
    transform: translateY(0);
    transition: transform .4s .4s;
    max-width: $border-max-width;
    margin: 0 auto;
    +tablet() {
        margin: 8px 0 0 0;
    }
    +mobile() {
        margin: 8px 0 0 0;
    }
    .nav-icon {
        z-index: 21;
        +tablet() {
            display: block;
            position: absolute;
            margin: 13px 0 0 15px;
            transform: translateX(0) scale(.75);
        }
        +mobile() {
            display: block;
            position: absolute;
            margin: 13px 0 0 15px;
            transform: translateX(0) scale(.75);
        }
    }
}

.navpage-show {
    .header {
        position: fixed;
        background-image: none;
        width: calc(100% - 100px);
        +tablet() {
            width: 100%;
        }
        +mobile() {
            width: 100%;
        }
    }
}

.default .header-inner {
    opacity: 0;
    transform: translateY(-150%);
    +tablet() {
        transform: translateY(0);
    }
    +mobile() {
        transform: translateY(0);
    }
}

.header-main {
    color: $title-color-l;
    margin: 0 24px 0 24px;
    position: relative;
    height: 65px;
    +tablet() {
        margin: 0;
        height: 45px;
    }
    +mobile() {
        margin: 0;
        height: 45px;
    }
}

.header-main a {
    color: $title-color-l;
    font-size: 18px;
    -webkit-font-smoothing: antialiased;
}

.header-nav {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    opacity: 1;
    transform: translateY(0);
    transition: transform .4s .4s, opacity .2s .4s;
}

.navpage-show {
    .header-nav {
        display: none;
    }
}

.header-nav-col {
  // width: calc(50% - 75px);
  display: flex;
  +tablet() {
    display: none;
  }
  +mobile() {
    display: none;
  }
}

.header-nav-col .link {
  cursor: pointer;
  text-align: center;
  width: 50%;
  padding: 20px 24px;
}
.header-nav-col .link.conf {
  padding: 20px 16px;
  letter-spacing: -1px;
  background-image: linear-gradient(-45deg, #ff561b, #fac200, #ff561b, #fac200);
  background-size: 400% 400%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  animation: fontTransition 5s ease-in-out infinite;
  -webkit-animation: fontTransition 5s ease-in-out infinite; /*Safari and Chrome*/
}
.conf-fire {
  transform: translate(-50%, -50%);
}
@keyframes fontTransition
{
0% {background-position: 0% 50%}
50% {background-position: 100% 50%}
100% {background-position: 0% 50%}
}

@-webkit-keyframes fontTransition /*Safari and Chrome*/
{
0% {background-position: 0% 50%}
50% {background-position: 100% 50%}
100% {background-position: 0% 50%}
}

.header-logo {
  padding: 18px 24px;
  padding-left: 16px;
}


