//////////
////// cover ///

.cover {
    position: relative;
    padding: 0;
    +tablet() {
        padding: 64px 0 0 0;
    }
    +mobile() {
        padding: 64px 0 0 0;
    }
}

.cover-img {
    width: 100%;
    display: block;
    background-size: cover;
}

.cover-fullname-logo {
    display: block;
    position: absolute;
    left: 50%;
    top: 50%;
    color: #222;
    width: 90%;
    transform: translate(-50%, 0%);
}

//////////
////// main content ///

.main {
    background: #fff;
    position: relative;
}

.row footer{
  text-align: center;
}

.row .ui-btn {
    padding: 16px;
    width: 215px;
    border: 1px solid $text-color;
    border-radius: 2px;
    background-color: transparent;
    color: $text-color;
    font-size: 14px;
    outline: none;
    transition: all .4s;
    &:hover {
      color: #fff;
      background-color: $text-color;
    }
}

.row-blog {
  background:
  radial-gradient(#ccc 3%, transparent 16%) 0 0,
  radial-gradient(#ccc 3%, transparent 16%) 8px 8px,
  radial-gradient(rgba(255,255,255,.1) 5%, transparent 20%) 0 1px,
  radial-gradient(rgba(255,255,255,.1) 5%, transparent 20%) 8px 9px;
  background-color: #f8f9fa;
  background-size: 16px 16px;
}

.content-section {
    padding: 120px 70px;
    max-width: $border-max-width;
    margin: 0 auto;
    +tablet() {
        padding: 45px 24px;
    }
    +mobile() {
        padding: 30px 15px;
    }
}


.content-list {
    display: flex;
    flex-wrap: wrap;
    padding: 40px 0 40px 0;
    +tablet() {
        padding: 20px 0 20px 0;
    }
    +mobile() {
        padding: 20px 0 20px 0;
    }
}
.content-blog {
    display: flex;
    flex-wrap: wrap;
    padding: 40px 0 40px 0;
    justify-content: space-between;
    +tablet() {
        padding: 20px 0 20px 0;
    }
    +mobile() {
        padding: 20px 0 20px 0;
    }
}

.content-item {
    box-sizing: border-box;
    width: 50%;
    +tablet() {
        width: 50%;
        padding: 10px 15px;
    }
    +mobile() {
        width: 100%;
        padding: 10px 0;
    }
}
.blog-item {
    box-sizing: border-box;
    width: 30%;
    .m-article {
      border-radius: 0;
      box-shadow: none;
    }
    +tablet() {
        width: 48%;
        padding: 10px 15px;
    }
    +mobile() {
        width: 100%;
        padding: 10px 0;
    }
}

.content-title {
    font-size: 44px;
    font-weight: normal;
    color: $title-color;
    margin-top: 30px;
    text-align: center;
    +tablet() {
        font-size: 30px;
    }
    +mobile() {
        font-size: 30px;
    }
}

.content-intro {
    font-size: 21px;
    font-weight: 300;
    margin-top: 20px;
    margin-bottom: 50px;
    color: $text-color;
    text-align: center;
    +tablet() {
      margin-top: 15px;
      margin-bottom: 30px;
      font-size: 16px;
    }
    +mobile() {
      margin-top: 10px;
      margin-bottom: 25px;
      font-size: 14px;
    }
}

.content footer {
    text-align: center;
}





//////////
////// projects ///
.project-intro {
  margin-top: .6rem;
}
.project-main {
    display: flex;
    align-items: center;
    margin-bottom: 36px;
    padding-right: 36px;
    +mobile() {
      margin-bottom: 18px;
      padding-right: 18px;
    }
    &:after {
      content: '';
      display: block;
      position: absolute;
      width: 100%;
      height: 0px;
      background-color: #fff;
      right: 0;
      bottom: 0;
    }
}

.project-cover {
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    width: 90px;
    height: 90px;
    border-radius: 50%;
    flex-shrink: 0;
    border: 2px solid #e8e4e2;
    transition: all .4s;
    +mobile() {
      width: 45px;
      height: 45px;
    }
    &:hover {
      .project-title {
        color: $main-color-red;
      }
      border: 2px solid $main-color-red;
    }
}
.project-name {
  font-size: 22px;
  line-height: 1.4;
  padding-left: 40px;
  font-weight: normal;
  color: $text-color;
  cursor: pointer;
  +mobile() {
    padding-left: 20px;
    font-size: 18px;
  }
}
.project-link:link, .project-link:visited {
  color: $text-color;
}
.project-desc {
  font-size: 18px;
  padding-left: 40px;
  color: #999;
  font-weight: 200;
  padding-top: 8px;
  +mobile() {
    padding-left: 20px;
    font-size: 14px;
  }
}

.project-title {
    color: $text-color;
    font-size: 24px;
    font-weight: 200;
    transition: color .4s;
    +mobile() {
        font-size: 14px;
    }
}

//////////
////// articles ///

.articles header {
    +tablet() {
        text-align: center;
    }
}

.article-cover {
    background: red;
    height: 230px;
    +mobile() {
        height: 180px;
    }
}

.article-title {
    color: $text-color;
    padding: 14px 0 0 0;
    text-align: center;
    font-size: 14px;
}

//////////
////// navpage ///

.navpage {
    color: $title-color-l;
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    padding-left: 100px;
    background-color: green;
    opacity: 0;
    transform: translate(100%, 0);
    transition: opacity 1s, transform 0s 1s;
    +tablet() {
        left: 0;
    }
    +mobile() {
        left: 0;
        padding: 0 60px 0 20px;
    }
}
.navpage-show {
    .navpage {
        opacity: 1;
        transform: translate(0, 0);
        transition: opacity 1s;
    }
}
.navpage {
    a {
        color: $title-color-l;
        text-decoration: none;
    }
    input {
        background-color: transparent;
        border: 1px solid $title-color-l;
        outline: none;
        padding: 12px 20px;
        font-size: 14px;
    }
    .content {
        padding-top: 160px;
        +tablet() {
            padding-top: 105px;
        }
        +mobile() {
            padding-top: 85px;
        }
    }
}

.navpage-viewport {
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 15;
    overflow: auto;
}

.navpage-main {
    display: flex;
    margin: -30px 0 0 0;
    opacity: 0;
    transition: margin .4s, opacity .4s;
    +tablet() {
        display: block;
    }
    +mobile() {
        display: block;
    }
}

.navpage-show {
    .navpage-main {
        opacity: 1;
        margin: 0;
        +tablet() {
            &.inputFocus {
                margin: -310px 0 0 0;
            }
        }
        +mobile() {
            &.inputFocus {
                margin: -260px 0 0 0;
            }
        }
    }
}

.navpage-nav {
    flex: 1;
    a {
        display: inline-block;
        font-size: 32px;
        line-height: 80px;
        font-weight: 200;
        +tablet() {
            font-size: 20px;
            line-height: 50px;
        }
        +mobile() {
            font-size: 18px;
            line-height: 45px;
        }
    }
}

.navpage-search {
    flex: 1 1;
    padding: 0 40px;
    +desktop() {
        transition: transform .4s;
        transform: translateY(0);
    }
    +tablet() {
        padding: 15px 0;
    }
    +mobile() {
        padding: 15px 0;
    }
    .fullname-logo {
        font-size: 44px;
        font-weight: 200;
        font-family: myriad pro, myriad, sans-serif, arial;
        line-height: 1.4;
        font-style: italic;
        padding: 0 0 30px 0;
        text-align: left;
        margin-bottom: 0;
        +desktop() {
            transition: opacity .4s;
            opacity: 1;
        }
        +tablet() {
            padding: 20px 0;
        }
        +mobile() {
            display: none;
        }
    }
}

.inputFocus {
    .fullname-logo {
        +desktop() {
            opacity: 0;
        }
    }
    .navpage-search {
        +desktop() {
            transform: translateY(-154px);
        }
    }
}

.navpage-search-wrapper {
    transition: width .5s;
    box-sizing: border-box;
    display: table;
    width: 340px;
    position: relative;
    +mobile() {
        width: 100%;
    }
}

.navpage-search-input {
    box-sizing: border-box;
    width: 100%;
}

.m-search-help {
    cursor: pointer;
    position: absolute;
    right: 15px;
    top: 13px;
    line-height: 32px;
    font-size: 18px;
    width: 20px;
    height: 23px;
    color: $text-color;
    background-image: url(../images/help1x.png);
    background-size: contain;
}
.m-search-help:hover .m-search-tip {
    display: inline-block;
}
.m-search-tip {
    display: none;
    cursor: auto;
    position: absolute;
    right: -16px;
    top: 35px;
    z-index: 9999;
    background-color: rgba(255, 255, 255, .2);
    color: #fff;
    font-size: 12px;
    text-align: left;
    white-space: nowrap;
    line-height: 1.5;
    font-weight: 200;
    padding: 8px;
    border-radius: 4px;
}
.m-search-tip:after{
  content: '';
  display: block;
  position: absolute;
  top: -16px;
  right: 17px;
  width: 0;
  height: 0;
  border-width: 8px;
  border-style: solid;
  border-color: transparent;
  border-bottom-color: rgba(255, 255, 255, .3);
}

.navpage-search-results {
    background-color: rgba(255, 255, 255, .2);
    a {
        &:hover {
            color: $title-color-l;
        }
    }
    ul {
        padding: 10px 0;
    }
    li {
        margin: 5px 0;
        padding: 5px 20px;
        &:hover {
            background-color: rgba(0, 0, 0 .5);
        }
    }
    .result-url {
        opacity: .6;
        font-size: 10px;
        word-break: break-all;
    }
}

.navpage-search-intro {
    margin: 20px 0 0 0;
    font-size: 18px;
    color: $title-color-l;
    +tablet() {
        font-size: 14px;
    }
    +mobile() {
        font-size: 12px;
    }
}

.navpage-backgrounds {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-position: center;
    background-size: cover;
    background-image: url(https://ws1.sinaimg.cn/large/006cGJIjly1fj1zp6yrkvj31jk1117ei.jpg);
    &:after {
        content: "";
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-color: rgba(20, 20, 20, .6);
    }
}

.navpage-background {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    opacity: 0;
    transition: opacity .5s;
    background-position: center;
    background-size: cover;
    transform: scale(1);
    &.projects {
        background-image: url(https://ws1.sinaimg.cn/large/006cGJIjly1fj1zp617ujj31hc0zkaj2.jpg);
    }
    &.articles {
        background-image: url(https://ws1.sinaimg.cn/large/006cGJIjly1fj1zp7q52xj31hc0zj7rh.jpg);
        transform: scale(1.1);
    }
    &.github {
        background-image: url(https://ws1.sinaimg.cn/large/006cGJIjly1fj1zp739bkj31hc0zk16e.jpg);
    }
    &.about {
        background-image: url(https://ws1.sinaimg.cn/large/006cGJIjly1fj1zp4c7f4j31hc0zqtfd.jpg);
        transform: scale(1.1);
    }
    &.active {
        &.articles, &.about {
            transform: scale(1);
        }
        opacity: 1;
        transition: opacity .5s, transform 20s;
        transform: scale(1.1);
    }
}

