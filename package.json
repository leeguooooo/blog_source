{
  "name": "hexo-site",
  "version": "2.8.3",
  "private": true,
  "hexo": {
    "version": "3.3.9"
  },
  "dependencies": {
    "date-format": "^1.2.0",
    "globby": "^6.0.0",
    "hexo": "^3.1.0",
    "hexo-generator-archive": "0.1.2",
    "hexo-generator-author": "0.0.5",
    "hexo-generator-baidu-sitemap": "0.1.1",
    "hexo-generator-category": "0.1.2",
    "hexo-generator-feed": "1.0.3",
    "hexo-generator-index": "0.1.2",
    "hexo-generator-sitemap": "1.0.1",
    "hexo-generator-tag": "0.1.1",
    "hexo-renderer-ejs": "0.1.0",
    "hexo-renderer-marked": "0.2.4",
    "hexo-renderer-stylus": "0.3.0",
    "hexo-server": "0.1.2",
    "hexo-tag-mermaid": "^1.0.0"
  },
  "scripts": {
    "postinstall": "node scripts/postinstall.js --verbose",
    "build": "sh build.sh",
    "dev": "hexo serve"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "test",
        "chore",
        "refactor",
        "opti"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "请输入message信息!",
      "helpMessage": "Commit message 格式错误, \n请查看规范: http://wiki.corp.qunar.com/pages/viewpage.action?pageId=159698767"
    }
  },
  "devDependencies": {
    "ghooks": "^2.0.0",
    "validate-commit-msg": "^2.14.0"
  }
}